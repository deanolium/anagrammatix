{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "./dist",
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true
  },
  "include": ["./src/**/*"],
  "exclude": ["dist", "**/*.spec.ts"],
  "references": [
    {
      "path": "../shared"
    }
  ]
}
